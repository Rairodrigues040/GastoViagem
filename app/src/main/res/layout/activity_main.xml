<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edit_distance"
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:inputType="number"
        android:hint="@string/distance"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="2dp"
        android:text="@string/total_km"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edit_price"
        android:layout_width="match_parent"
        android:hint="@string/price"
        android:inputType="numberDecimal"
        android:layout_marginTop="32dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="2dp"
        android:text="@string/price_per_liter"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edit_autonomy"
        android:layout_width="match_parent"
        android:hint="@string/autonomy"
        android:inputType="numberDecimal"
        android:layout_marginTop="32dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="2dp"
        android:text="@string/kms_per_liter"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:text="@string/total_spend"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/edit_total_value"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:textAllCaps="true"
        android:textSize="38dp"
        android:textColor="@color/azulMarinho"
        android:text="@string/rs_0"
        android:layout_height="wrap_content"/>
    
    <Button

        android:id="@+id/button_calculate"
        android:text="@string/calculate"
        android:textAllCaps="true"
        android:padding="16dp"
        android:backgroundTint="@color/azulMarinho"
        android:layout_marginTop="28dp"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>